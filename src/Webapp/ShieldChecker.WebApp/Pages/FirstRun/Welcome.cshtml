@page
@model ShieldChecker.WebApp.Pages.FirstRun.WelcomeModel
@{
    ViewData["Title"] = "First run Wizard";
}


<div>
    <h1>First run Wizard</h1>
    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
    </div>
    <div class="wizardstep">
        <div class="row">
        <div class="col-md-4">
            <img src="~/img/logo/logo-square-negative.png" class="img-fluid" alt="ShieldChecker Logo" />
        </div>
        <div class="col-md-8">
            <h2>Welcome to Shield Checker</h2>
            <p>This application assists security teams in testing their security stack's ability to detect various cyber attacks. This wizard will guide you through the setup process to prepare your instance for the initial tests.</p>
            <p>Start the first run wizard now and ensure your security is up to the challenge!</p>
            <a href="/FirstRun/Step1" class="btn btn-primary">Start Wizard</a>
            </div>
        </div>
    </div>
</div>

