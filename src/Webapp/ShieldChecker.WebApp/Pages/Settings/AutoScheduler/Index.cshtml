@page
@model ShieldChecker.WebApp.Pages.Settings.AutoScheduler.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Scheduler</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AutoSchedule[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutoSchedule[0].Enabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutoSchedule[0].NextExecution)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AutoSchedule) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayTextFor(modelItem => item.Enabled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NextExecution)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID"><i class="fa-regular fa-pen-to-square" data-toggle="tooltip" title="Edit"></i></a>
                    <a asp-page="./Delete" asp-route-id="@item.ID"><i class="fa-regular fa-trash-can" data-toggle="tooltip" title="Delete"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
